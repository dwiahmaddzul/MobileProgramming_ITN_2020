<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Perbarui atau Hapus Data"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updel_stok"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:hint="Jumlah/Stok"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/updel_bpom" />

    <EditText
        android:id="@+id/updel_name"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="56dp"
        android:hint="Nama"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/updel_bpom"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:hint="KodeBPOM"
        app:layout_constraintEnd_toEndOf="@+id/updel_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/updel_name"
        app:layout_constraintTop_toBottomOf="@+id/updel_name" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:text="HAPUS"
        app:layout_constraintEnd_toEndOf="@+id/updel_bpom"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/updel_bpom"
        app:layout_constraintTop_toBottomOf="@+id/updel_stok" />

    <Button
        android:id="@+id/btn_up"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:text="PERBARUI"
        app:layout_constraintEnd_toEndOf="@+id/btn_del"
        app:layout_constraintStart_toStartOf="@+id/btn_del"
        app:layout_constraintTop_toBottomOf="@+id/btn_del" />


</androidx.constraintlayout.widget.ConstraintLayout>